<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/base.css">
  </head>
  <body>

    <div class="container">
      <h1>Chat Rooms</h1>

      <div class="row col-lg-12">
        <h5>
          Logged in as: <%= name %>
        </h5>
      </div>
      <div class="row col-lg-12">
        <form action="/logout" method="post">
          <button class="btn btn-outline-info" type="submit">Log Out</button>
        </form>
      </div>
      
      <hr class="mb-3">
      <% if(messages.error) { %>
        <div class="row col-lg-12 mb-3">
          <h3 class="alert-danger">
            <%= messages.error %>
          </h3>
        </div>
      <% } %>

      <div class="row col-lg-12">
        <a href="/rooms/personal" class="btn btn-sm btn-outline-success mb-3">Direct Message</a>
      </div>

      <div class="row col-lg-12">
        <form class="row" action="/rooms" method="post">
          <div class="same-row">
              <input class="form-control btn-room mt-0 ml-1" type="text" name="name" placeholder="new room name" maxLength="15" required/>
              <button class="btn btn-outline-dark btn-room mt-0" type="submit">Create Room</button>
          </div>
        </form>
      </div>

      <div class="row col-lg-12">
        <h5 class="mt-3">Join Room</h5>
      </div>
      <% for( let i = rooms.length - 1; i >= 0 ; i-- ) { %>
      <div class="row col-lg-12">
        <a class="btn btn-lg btn-outline-primary btn-room" href="/room/<%= rooms[i].id %>/messages">
          <%= rooms[i].name %>
        </a>
        
      </div>
      <% } %>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  </body>
</html>